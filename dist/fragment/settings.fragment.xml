<core:FragmentDefinition xmlns:core="sap.ui.core" 
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout" 
    xmlns:f="sap.f" 
    xmlns:unified="sap.ui.unified">
    <VBox>
        <!-- heading -->
        <VBox class="vbox-white-bg">
            <HBox alignItems="Start" justifyContent="SpaceBetween" class="sapUiSmallMargin">
                <Label text="Settings" class="dashboard-heading" />
                <HBox>
                    <Button id="settings-edit-id" text="Edit" press="handleSettingsEditPress" />
                    <Button id="settings-save-id" text="Save" type="Emphasized" visible="false" press="handleSettingsSavePress" class="sapUiTinyMarginEnd" />
                    <Button id="settings-cancel-id" text="Cancel" visible="false" press="handleSettingsCancelPress" />
                </HBox>
            </HBox>
        </VBox>
        <!-- body -->
        <VBox id="settings-page-content" />
        <!-- footer -->
        <core:Fragment fragmentName="com.digiArtitus.fragment.footer" type="XML" class="vbox-footer-fixed" />
    </VBox>
</core:FragmentDefinition>